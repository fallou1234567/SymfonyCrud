

{% block body %}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class=" container col-md-6 col-md-offset-3 ">
    <h1 align="center">Affichage des club</h1>
    <table class="table">
        <thead class="table-dark">
        <tr align="center">
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Prenom</th>
            <th scope="col">Age</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
            <th scope="col"><a href="{{path('app_client')}}" class="btn btn-primary">Ajouter</a></th>
        </tr>
        </thead>
        <tbody>
            
        {% for client in clients %}
            
            <tr align="center">
                <th scope="row">{{ num }}</th>
                <td>{{ client.nom }}</td>
                <td>{{ client.prenom }}</td>
                <td>{{ client.age }}</td>
                <td><a href="{{path('app_delete', {id: client.id })}}"  class="btn btn-danger">Delete </a></td>
                <td><a href="{{path('app_edit', {id: client.id })}}"  class="btn btn-warning">Update</a></td>
                <td><a href="{{path('app_show', {id: client.id })}}"  class="btn btn-primary">Details</a></td>
            </tr>
        
        {% endfor %}
        
        </tbody>
    </table>
</div>

{% endblock body %}